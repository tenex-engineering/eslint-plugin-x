{
  "include": ["src/**/*"],
  "compilerOptions": {
    "paths": {
      "#package/*": ["./src/*"]
    },

    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    // Strictness
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    // Transpilation
    "module": "NodeNext",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Enable latest ES features
    "lib": ["ES2023"],

    // Ensure color and formatting when compiler output is piped, e.g. through Docker
    "pretty": true
  }
}

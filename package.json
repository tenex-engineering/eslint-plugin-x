{
  "name": "@txe/eslint-plugin-x",
  "version": "0.1.0",
  "description": "ESlint Plugin X",
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "prepublishOnly": "npm run ci",
    "ci": "npm run lint && npm run check-exports && npm run build && npm run test && npm run check-format && npm run check-spelling",
    "dev": "concurrently --names=\"tsc,test\" --prefix-colors=\"cyan,green\"  \"npm run watch:build\" \"npm run watch:test\"",
    "build": "tsc",
    "lint": "eslint ./",
    "check-format": "prettier --check ./",
    "check-exports": "attw --pack ./ --ignore-rules=cjs-resolves-to-esm",
    "check-spelling": "cspell ./",
    "test": "vitest run",
    "watch:build": "tsc --watch --preserveWatchOutput",
    "watch:test": "vitest --clearScreen=false"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tenex-engineering/eslint-plugin-x.git"
  },
  "keywords": [
    "eslint",
    "plugin",
    "x"
  ],
  "author": "Chabib N. R.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tenex-engineering/eslint-plugin-x/issues"
  },
  "homepage": "https://github.com/tenex-engineering/eslint-plugin-x#readme",
  "files": [
    "dist",
    "!dist/testing",
    "!**/*.spec.*",
    "!**/*.map"
  ],
  "imports": {
    "#package/*": "./dist/*"
  },
  "dependencies": {
    "@typescript-eslint/utils": "^8.13.0"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.16.4",
    "@changesets/cli": "^2.27.9",
    "@eslint/compat": "^1.2.2",
    "@stylistic/eslint-plugin-js": "^2.10.1",
    "@types/node": "^22.9.0",
    "@typescript-eslint/rule-tester": "^8.13.0",
    "concurrently": "^9.1.0",
    "cspell": "^8.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-unicorn": "^56.0.0",
    "globals": "^15.12.0",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.13.0",
    "vite": "^5.4.10",
    "vitest": "^2.1.4"
  }
}
